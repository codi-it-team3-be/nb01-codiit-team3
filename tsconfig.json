{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],                                                   
    "outDir": "./build",                   
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,              
    "skipLibCheck": true                            
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}